<div class="container">
<br>
  <h3> Mis Reservas <%= @calendar.name %></h3>
  <table class="bookings_table">
    <tr>
      <th>Start</th>
      <th>End</th>
    </tr>

    <% @bookings.each do |booking| %>
    <tr>
      <td>
        <%= booking.start_time.strftime('%e %b %Y %H:%M%p') %>
      </td>
      <td>
        <%= (booking.calculate_end_time + 60).strftime('%e %b %Y %H:%M%p') %>
      </td>
      <td><%= link_to "Delete", calendar_booking_path(@calendar, booking), data: { confirm: 'Are you sure?' }, method: :delete %>
    </tr>
    <% end %>
  </table>
</div>

<div class="calendar_container">
  <div id="calendar">
  </div>
</div>
